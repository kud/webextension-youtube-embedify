{
  "manifest_version": 2,
  "name": "YouTube Embedify",
  "version": "2.0.2",
  "description": "Replaces YouTube video URLs with embed versions.",
  "permissions": [
    "tabs",
    "webNavigation",
    "storage",
    "*://www.youtube.com/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "16": "icons/icon.svg",
      "48": "icons/icon.svg",
      "128": "icons/icon.svg"
    },
    "default_popup": "src/popup.html"
  },
  "icons": {
    "16": "icons/icon.svg",
    "48": "icons/icon.svg",
    "128": "icons/icon.svg"
  }
}